@model TravelBlog.Models.Experience

<h2>Edit</h2>
<br/>
<h4>Edit this location: @Html.DisplayFor(model => model.Description)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ExperienceId)
    @Html.HiddenFor(model => model.LocationId)

    @Html.LabelFor(model => model.Description)
    @Html.EditorFor(model => model.Description)

    <input type="submit" value="Save" /> 
}

<p>@Html.ActionLink("Back to List", "Details", "Location", new {id = @Model.LocationId })</p>

