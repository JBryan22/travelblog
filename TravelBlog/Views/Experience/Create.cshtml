@model TravelBlog.Models.Experience
@{

}

<h2>Create new Experience for @ViewBag.currentLocation.Name</h2>
    <hr />
    @using (Html.BeginForm())
    {
        <h4>Describe your experience</h4>

        @Html.TextAreaFor(model => model.Description, new {rows="4", cols="80", @class="text-area"})
        @Html.HiddenFor(model => model.LocationId, new {@value = ViewBag.currentLocation.LocationId})
        <br/>
        <input type="submit" value="Add this experience" class="btn btn-success"/>
    }
    <br>

 <input type="button" class="btn btn-warning" value="Back to Locations" onclick="location.href='@Url.Action("Index", "Location")'" />
