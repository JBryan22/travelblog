@model IEnumerable<TravelBlog.Models.Location>
@{ 
    ViewData["Title"] = "To Do List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
    <head>
    </head>
	
    <body>
		
     <h2>Oh, the places I've been!</h2>
    	<table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
				  <th>
                    Add Experience
                </th>
				    <th>
                    Options
                </th>
                <th></th>
            </tr>

            @foreach(var location in Model)
			{
			    <tr> 
                    <td>
                        @Html.ActionLink(location.Name, "Details", new { LocationId = location.LocationId })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => location.Description)
                    </td>
				  <td>
                        @Html.ActionLink("Record Experience", "Create", "Experience", new { locationId = location.LocationId })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = location.LocationId }) |     @Html.ActionLink("Update", "Update", new { id = location.LocationId })
                    </td>
                  
				
                </tr>
			}

			<ul>
    	
			</ul>
			
    	</table>

		<input type="button" class="btn btn-info" value="Add a Travel Location" onclick="location.href='@Url.Action("Create")'" />

        <input type="button" class="btn btn-info" value="Add a Travel Partner" onclick="location.href='@Url.Action("Create", "Person")'" />

    </body>
</html>